@page "/Consulta_frutos"

<PageTitle>Consulta</PageTitle>

<EditForm Model="producto">

    <div class="card">

        <div class="card-header">
            <h3> Consulta de Productos </h3>
        </div>

        <div class="card-body">

            <form>
                <div class="row">

                    <div class="col">
                        <InputSelect class="col" @bind-Value="filtro">
                            <option value="1">ProductoId</option>
                            <option value="2">Descripci√≥n</option>
                            <option value="3">Fecha de Caducidad</option>
                        </InputSelect>
                    </div>

                    <div class="col">
                        <label  class="col-group-text" > Busqueda </label>
                        <InputText class="col-auto" @bind-Value="Criterio"/>
                    </div>
                    
                    <div class="col">
                        <button type="button" class="btn btn-sm btn-primary" @onclick="Buscar"> <span class="oi oi-magnifying-glass" ></span> Buscar </button>
                    </div>
                </div>
            </form>
            
        </div>

        <table class="table table-bordered" >
            <thead class="thead">
                <tr class="table">
                    <th>FrutosId</th>
                    <th>Concepto</th>
                    <th>Cantidad</th>
                    <th>Fecha</th>
                </tr>
            </thead>

            <tbody>
                @foreach (var item in frutos)
                {
                    <tr>
                        <td>@item.FrutosId</td>
                        <td>@item.Concepto</td>
                        <td>@item.Cantidad</td>
                        <td>@item.Fecha.ToString("dd-MM-yyyy")</td>
                        <td><a class="btn btn-sm btn-outline-primary oi oi-eye" href="Registro_frutos/@item.FrutosId"> Ver </a></td>
                    </tr>
                }
            </tbody>
        </table>

    </div>

</EditForm>

@code {
    
    public string? filtro { get; set; }

    public string? Criterio { get; set; }

    public List<Frutos> frutos { get; set; } = new List<Frutos>();

    public List<Productos> producto { get; set; } = new List<Productos>();

    [Inject]
    public FrutosBLL frutosBLL { get; set; }

    private void Buscar()
    {
        if(Criterio!=null)
        {
            switch(filtro)
            {
                case "1":
                    frutos = frutosBLL.GetList(e => e.FrutosId == int.Parse(Criterio));
                    break;
                case "2":
                    frutos = frutosBLL.GetList(e => e.Concepto.ToLower().Contains(Criterio.ToLower()));
                    break;
            }
        }
        else
            frutos = frutosBLL.GetList(p => true);
    }
}